<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kominfo.harysay.simkominfo">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".masterdata.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TabDashboardActivity"
            android:label="Simkominfo"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:label="Login"
            android:configChanges="orientation|screenSize"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".dashboard.UtamaActivity"
            android:label="@string/title_activity_utama"></activity>
        <activity
            android:name=".TabMasterDataActivity"
            android:label="Master Data"></activity>
        <activity
            android:name=".intro.MyIntro"
            android:theme="@style/FullscreenTheme" />
    </application>
</manifest>